<Page
    loaded="loaded"
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:map="nativescript-mapbox"
    id="home-page">

    <ActionBar class="action-bar">
        <!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!-- 
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text=""></Label>
    </ActionBar>

    <StackLayout class="page">
        <StackLayout id="image-wrapper">
             <ScrollView orientation="vertical">
                <FlexboxLayout id="imageContainer" flexWrap="wrap">
                </FlexboxLayout>
             </ScrollView>  
        </StackLayout>
        <Label tap="openCamera" text="camera2" class="open-camera"></Label>
         <Label tap="selectImages" text="select" class="select-img"></Label>
        <TextField hint="Enter text" id="naziv"></TextField>
        <Label tap="sendInfo" text="prijavi" class="prijavi"></Label>
         <StackLayout>
            <Label text="Nice map, huh!" class="title"/>
            <ContentView height="240" width="240">
            <!-- IMPORTANT: plugin version 3 uses :MapboxView, lower versions use :Mapbox -->
            <map:MapboxView
                accessToken="pk.eyJ1IjoiaXZhbmpvZTE3IiwiYSI6ImNqdGRtazh2aTExcmgzenRmMjdyYmVkNnMifQ.cb0c9V6WpbdS74LpYEDmhQ"
                mapStyle="traffic_night"
                latitude="44.8666"
                longitude="13.8496"
                disableRotation="true"
                disableScroll="false"
                disableTilt="true"
                showUserLocation="true"
                mapReady="onMapReady">
            </map:MapboxView>
            </ContentView>
        </StackLayout>
    </StackLayout>
    
</Page>
